<form {{action 'doneEditing' on='submit'}}>
  <p>{{input type="text" value=model.firstName}}</p>
  <p>{{input type="text" value=model.lastName}}</p>
  <p>{{input type="text" value=model.phone}}</p>
  <p>{{input type="text" value=model.email}}</p>
  <p>{{input type="text" value=model.photo}}</p>
  <p>{{input type="text" value=model.dateOfBith}}</p>
  <p>{{textarea value=model.notice}}</p>
  <button type="submit" class="btn btn-default">Done</button>
</form>