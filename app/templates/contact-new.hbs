<h3>Add New Contact</h3>

<form {{action 'addContact' on='submit'}} class="form-horizontal">
    <div class="form-group">
        <label class="col-sm-1 control-label">First Name: </label>
        <div class="col-sm-2">
            {{input type="text" value=firstName class="form-control"}}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-1 control-label">Last Name: </label>
        <div class="col-sm-2">
            {{input type="text" value=lastName class="form-control"}}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-1 control-label">Phone: </label>
        <div class="col-sm-2">
           {{input type="text" value=phone class="form-control"}}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-1 control-label">Email: </label>
        <div class="col-sm-2">
            {{input type="text" value=email class="form-control"}}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-1 control-label">Photo Url: </label>
        <div class="col-sm-2">
            {{input type="text" value=photo class="form-control"}}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-1 control-label">Date Of Bith: </label>
        <div class="col-sm-2">
            {{input value=dateOfBith class="form-control"}}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-1 control-label">Notice: </label>
        <div class="col-sm-2">
            {{textarea value=notice class="form-control"}}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-1 col-sm-2">
            <button type="submit" class="btn btn-default">Add!</button>
        </div>
    </div>
</form>
